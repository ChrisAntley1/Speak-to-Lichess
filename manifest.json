{
    "name": "Hello Lichess!",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Says hello to Lichess!",
    "host_permissions": ["*://*.lichess.org/*"],
    "content_scripts": [
      {
        "matches": ["*://*.lichess.org/*"],
        "js": ["hello.js"],
        "run_at": "document_end"
      }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "listen-for-move": {
            "suggested_key": {
                "default": "Ctrl + Shift + Space",
                "windows": "Ctrl + Shift + Space"
            },
            "description": "Listen to user and get their next move."
        }
    },

    "action": {
      "default_icon": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
      },
      "default_popup": "popup.html",
      "default_title": "A popup will come here."
    },

    "permissions": [
      "storage"
    ]
  }